{
	"compilerOptions": {
		"target": "ES6",
		"module": "commonjs",
		"lib": [ "ES5", "DOM" ],
		"strict": true,
		"baseUrl": "src",
		"outDir": "dist",
		"sourceMap": true,
		"allowJs": false,
		"checkJs": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
	}
}
