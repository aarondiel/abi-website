{
	"compilerOptions": {
		"target": "esnext",
		"checkJs": false,
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": [ "esnext", "dom" ],
		"baseUrl": ".",
		"paths": {
			"@/*": [ "./*" ]
		}
	},
	"include": [ "./**/*.ts", "./**/*.d.ts", "src/**/*.vue" ],
	"exclude": [ "node_modules" ]
}
