<template>
  <div class="submit-menu-wrapper">
    <label>
      <span class="submit-menu-name">name:</span>
      <input id="submit-menu-name-input" type="text" />
    </label>
    <button class="submit-menu-button" @click="submit">submit</button>
    <p id="submit-menu-response"></p>
  </div>
</template>

<script>
export default {
  name: 'SubmitMenu',
  props: {
    selection: Number,
    url: String
  },
  watch: {
    selection: function(val) {
      if (val != -1) {
        this.$el.style.display = 'grid';
      } else {
        this.$el.style.display = 'none';
      }
    }
  },
  methods: {
    submit: async function() {
      console.log(
        document.getElementById('submit-menu-name-input').value,
        this.selection
      );
      fetch(this.url, {
        method: 'POST',
        mode: 'cors',
        cache: 'no-cache',
        credentials: 'same-origin',
        headers: {
          'Content-Type': 'application/json'
        },
        redirect: 'follow',
        referrerPolicy: 'no-referrer',
        body: JSON.stringify({
          userName: document.getElementById('submit-menu-name-input').value,
          choice: this.selection
        })
      })
        .then(async (response) => {
          const response_text = document.getElementById('submit-menu-response');
          response_text.innerText = await response.text();
          response_text.syle.color = response.ok
            ? this.color.error
            : this.color.success;
        })
        .catch((err) => {
          console.error(err);
          const response_text = document.getElementById('submit-menu-response');
          response_text.innerText = 'what the fuck did you do to my site?';
          response_text.syle.color = this.color.error;
        });
    }
  }
};
</script>

<style scoped>
div.submit-menu-wrapper {
  display: none;
  padding: 0 15%;
  grid-template-columns: repeat(2, 1fr);
  grid-column-gap: 2em;
  justify-items: center;
  align-items: center;
}

p#submit-menu-response {
  display: none;
	grid-column: 1 / span 2;
}
</style>
